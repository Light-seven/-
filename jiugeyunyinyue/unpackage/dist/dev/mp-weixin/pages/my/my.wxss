.myContainer {
  width: 100%;
  background: #f5f5f5;
}
.myContainer .user {
  height: 480rpx;
  position: relative;
}
.myContainer .user .whiteBg {
  width: 100%;
  position: absolute;
  top: 446rpx;
  height: 36rpx;
}
.myContainer .user .mybg {
  width: 100%;
  opacity: 0.8;
}
.myContainer .user .userBox {
  display: flex;
  align-items: center;
  position: absolute;
  top: 80rpx;
  left: 40rpx;
}
.myContainer .user .userBox image {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.myContainer .user .userBox .username {
  font-size: 24;
  color: #303133;
  margin-left: 20rpx;
}
.myContainer .user .vipBoxF {
  display: flex;
  justify-content: center;
}
.myContainer .user .vipBox {
  overflow: hidden;
  top: 300rpx;
  height: 180rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 86%;
  padding: 20rpx 24rpx;
  background: rgba(0, 0, 0, 0.6);
  height: 140rpx;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
}
.myContainer .user .vipBox image {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
  opacity: 0.7;
}
.myContainer .user .vipBox .vipHeader {
  display: flex;
  justify-content: space-between;
}
.myContainer .user .vipBox .vipHeader .vip-btn {
  border: 2rpx solid #f7d680;
  border-radius: 20px;
  color: #303133;
  font-size: 22rpx;
  font-weight: bold;
  background-color: #f7d680;
  padding: 10rpx 10rpx;
  z-index: 1;
}
.myContainer .usercontainer-box {
  padding: 0 40rpx;
  height: 550rpx;
}
.myContainer .userBar {
  margin: 5rpx 0;
  display: flex;
  justify-content: space-around;
  background-color: white;
  height: 100rpx;
}
.myContainer .userBar .userBarItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.myContainer .userBar .userBarItem text {
  margin-top: 5rpx;
  font-size: 24rpx;
}
.myContainer .user-footer {
  background-color: #fff;
  margin: 20rpx 0;
  padding: 0 10rpx;
  height: 600rpx;
}
.myContainer .user-footer .userFtitle {
  font-size: 28rpx;
  margin: 4rpx;
}
.myContainer .user-footer .userFbar {
  font-size: 24rpx;
  padding-top: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.myContainer .user-footer .userFbar .userFbarTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.myContainer .user-footer .userFbar .recentlyPlayed {
  display: flex;
  height: 200rpx;
}
.myContainer .user-footer .userFbar .recentlyPlayed .played {
  margin-top: 30rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.myContainer .user-footer .userFbar .recentlyPlayed .played image {
  width: 140rpx;
  height: 140rpx;
}
.myContainer .user-footer .userFbar .recentlyPlayed .played text {
  width: 140rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
}

