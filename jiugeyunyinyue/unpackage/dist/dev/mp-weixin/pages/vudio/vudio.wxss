.vidioHeader {
  display: flex;
  align-items: center;
  padding: 10rpx 10rpx 0;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
  background-color: white;
}
.vidioHeader .searchHeader {
  flex-grow: 1;
  margin: 0 10rpx;
  border-radius: 10rpx;
}
.vidioHeader image {
  width: 60rpx;
  height: 60rpx;
}
.videoList {
  padding-top: 40rpx;
  z-index: -1;
  height: calc(100vh - 122rpx - 100rpx - 40rpx);
}
.videoList .video-item {
  padding: 3%;
  padding-bottom: 0;
}
.videoList .video-item .videoinfo {
  width: 100%;
  border-radius: 10rpx;
}
.videoList .video-item .videoContent {
  max-width: 500rpx;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.videoList .video-footer {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.videoList .video-footer .videoFleft image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.videoList .video-footer .videoFleft text {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.videoList .video-footer .videoFright .frighrItem {
  display: flex;
  justify-content: space-around;
}
.videoList .video-footer .videoFright .frighrItem .item {
  margin-left: 30rpx;
}
.videoList .video-footer .videoFright .frighrItem .item text {
  font-size: 20rpx;
}
.videoList .video-footer .videoFright .frighrItem .footerBtn {
  display: inline;
  background-color: transparent;
  border-color: transparent;
  padding: 0;
  margin-top: -20rpx;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.videoList .video-footer .videoFright .frighrItem .footerBtn:after {
  border: none;
}

