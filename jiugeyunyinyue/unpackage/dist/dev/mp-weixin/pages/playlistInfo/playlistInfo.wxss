.infoContainer {
  position: relative;
}
.infoContainer .top {
  position: -webkit-sticky;
  position: sticky;
  top: 115rpx;
  z-index: 1;
}
.infoContainer .headBg {
  background-repeat: no-repeat;
  opacity: 0;
  float: left;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  background-size: cover;
  background-position: 0 90%;
  width: 100%;
  height: 115rpx;
  z-index: 5;
}
.infoContainer .headerTitle {
  color: white;
  /* position: absolute;
       top: 55rpx;
       left: 10rpx; */
  /* position: sticky;
       top: 100rpx;
       left: 100rpx; */
  float: left;
  position: -webkit-sticky;
  position: sticky;
  padding-top: 25rpx;
  top: 0rpx;
  display: flex;
  align-items: center;
  z-index: 25;
  width: 100%;
  height: 115rpx;
}
.infoContainer .headerTitle .titleText {
  margin-left: 15rpx;
}
.infoContainer .infoPic {
  position: relative;
  /* .infoImg{
      width: 100%;
      height: 50vh;
      opacity: 0;
    } */
}
.infoContainer .infoPic .bgWhite {
  position: relative;
}
.infoContainer .infoPic .bgWhite .whiteBg {
  width: 100%;
  height: 92rpx;
  position: absolute;
  top: -45rpx;
}
.infoContainer .infoPic .bgWhite .infoFooter {
  z-index: 3;
  padding: 0 15rpx;
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-radius: 40rpx;
  width: 77%;
  height: 90rpx;
  position: absolute;
  top: -60rpx;
  left: 11%;
  font-size: 26rpx;
}
.infoContainer .infoPic .bgWhite .infoFooter .footerL, .infoContainer .infoPic .bgWhite .infoFooter .footerMid, .infoContainer .infoPic .bgWhite .infoFooter .footerR {
  display: flex;
  align-items: center;
}
.infoContainer .infoPic .bgWhite .infoFooter .footerL text, .infoContainer .infoPic .bgWhite .infoFooter .footerMid text, .infoContainer .infoPic .bgWhite .infoFooter .footerR text {
  margin: 0 5rpx;
}
.infoContainer .infoPic .bgWhite .infoFooter .footerMid {
  padding: 0 20rpx;
}
.infoContainer .infoPic .tidai {
  width: 100%;
  height: 50vh;
  background-size: cover;
}
.infoContainer .infoPic .infoMiddle {
  position: absolute;
  top: 50%;
  z-index: 2;
  color: white;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.infoContainer .infoPic .infoMiddle .bigTitle {
  font-size: 46rpx;
  font-weight: bold;
  padding: 0 100rpx;
}
.infoContainer .infoPic .infoMiddle .smallTitle {
  font-size: 24rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
.infoContainer .infoPic .infoMiddle .direction {
  padding: 0 20rpx;
  font-size: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.infoContainer .listHeader {
  margin: 20rpx 0;
  padding-top: 20rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 80rpx;
  background-color: white;
}
.infoContainer .listHeader .listHeaderL {
  display: flex;
  align-items: center;
}
.infoContainer .listHeader .listHeaderL text {
  font-weight: bold;
  margin-left: 15rpx;
}

