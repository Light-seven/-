.container .swiperContainer {
  height: 330rpx;
}
.container .swiperContainer .swiperCitem .swiperImage {
  width: 100%;
  height: 100%;
}
.container .nav {
  display: flex;
  justify-content: space-around;
}
.container .nav .nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .nav .nav-item .nav-icon {
  font-size: 50rpx;
  background-color: #f01010;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  color: black;
  margin: 20rpx 0;
}
.container .nav .nav-item text {
  font-size: 28rpx;
}
.recommendContainer .scrollBox {
  display: flex;
  height: 300rpx;
}
.recommendContainer .scrollBox .scrollItem {
  margin: 0 10rpx;
  /* display: flex;
    flex-direction: column;
    align-items: center; */
}
.recommendContainer .scrollBox .scrollItem .recommendIamge {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin: 0 10rpx;
}
.recommendContainer .scrollBox .scrollItem .recommendName {
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 24rpx;
}
.topContainer .top-box .topBoxInfo {
  height: 460rpx;
}
.topContainer .top-box .topBoxInfo .topSwiper .topswiper-item {
  width: 88%;
  margin: 5px 0;
}
.topContainer .top-box .topBoxInfo .topSwiper .topswiper-item .topswiperTitle {
  font-size: 28rpx;
  font-weight: bold;
}
.topContainer .top-box .topBoxInfo .topSwiper .topswiper-item .topitem {
  margin: 10px 0;
  display: flex;
  align-items: center;
}
.topContainer .top-box .topBoxInfo .topSwiper .topswiper-item .topitem .topNum {
  margin: 0 40rpx;
  flex-shrink: 0;
}
.topContainer .top-box .topBoxInfo .topSwiper .topswiper-item .topitem .topName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.topContainer .top-box .topBoxInfo .topSwiper .topswiper-item .topitem .topImg {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}

